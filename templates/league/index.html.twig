{% extends 'base.html.twig' %}

{% block title %}Leagues list{% endblock %}

{% block body %}

<div class="col-lg-12">
    <div class="row">
        <div class="col-sm-10 mx-auto">
            <div class="card">
                <div class="card-header">
                    Leagues List
                </div>
                <div class="card-body">
                    <h1 class="card-title">Leagues List</h1>
                    <div class="card-text">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Level</th>
                                        <th>Pts_to_up</th>
                                        <th>Pts_to_down</th>
                                        <th>actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for league in leagues %}
                                    <tr>
                                        <td>{{ league.id }}</td>
                                        <td>{{ league.level }}</td>
                                        <td>{{ league.ptsToUp }}</td>
                                        <td>{{ league.ptsToDown }}</td>
                                        <td>
                                            <a href="{{ path('league_show', {'id': league.id}) }}">show</a>
                                            <a href="{{ path('league_edit', {'id': league.id}) }}">edit</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    
                    <a class="btn btn-primary" href="{{ path('league_new') }}">Create new</a>
                    
                </div>
                <div class="card-footer text-muted">
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
