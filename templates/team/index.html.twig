{% extends 'base.html.twig' %}

{% block title %}Teams list{% endblock %}

{% block body %}

<div class="col-lg-12">
    <div class="row">
        <div class="col-sm-10 mx-auto">
            <div class="card">
                <div class="card-header">
                    Teams List
                </div>
                <div class="card-body">
                    <h1 class="card-title">Teams List</h1>
                    <div class="card-text">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th>Image</th>
                                        <th>actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for team in teams %}
                                    <tr>
                                        <td>{{ team.id }}</td>
                                        <td>{{ team.name }}</td>
                                        <td>{{ team.image }}</td>
                                        <td>
                                            <a href="{{ path('team_show', {'id': team.id}) }}">show</a>
                                            <a href="{{ path('team_edit', {'id': team.id}) }}">edit</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="4">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <a class="btn btn-primary" href="{{ path('team_new') }}">Create new</a>
                </div>
                <div class="card-footer text-muted">
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}