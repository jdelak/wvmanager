{% extends 'base.html.twig' %}

{% block title %}#{{ ethnicity.id }} - {{ ethnicity.name }}{% endblock %}

{% block body %}
<div class="col-lg-12">
    <div class="row">
        <div class="col-sm-6 mx-auto">
            <div class="card">
                <div class="card-header">
                   #{{ ethnicity.id }} - {{ ethnicity.name }}
                   {{ include('ethnicity/_delete_form.html.twig') }}
                </div>
                <div class="card-body">
                    <h1 class="card-title">Edit {{ ethnicity.name }}</h1>
                    <p class="card-text">
                    {{ include('ethnicity/_form.html.twig', {'button_label': 'Update'}) }}
                    </p>
                </div>
                <div class="card-footer text-muted">
                    <a class="btn btn-default" href="{{ path('ethnicity_index') }}">back to list</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
