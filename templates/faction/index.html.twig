{% extends 'base.html.twig' %}

{% block title %}Factions list{% endblock %}

{% block body %}

<div class="col-lg-12">
    <div class="row">
        <div class="col-sm-10 mx-auto">
            <div class="card">
                <div class="card-header">
                    Factions List
                </div>
                <div class="card-body">
                    <h1 class="card-title">Factions List</h1>
                    <div class="card-text">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th>Image</th>
                                        <th>actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for faction in factions %}
                                    <tr>
                                        <td>{{ faction.id }}</td>
                                        <td>{{ faction.name }}</td>
                                        <td><img class="img-fluid" src="{{ asset('images/factions/' ~ faction.image) }}" /></td>
                                        <td>
                                            <a href="{{ path('faction_show', {'id': faction.id}) }}">show</a>
                                            <a href="{{ path('faction_edit', {'id': faction.id}) }}">edit</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="4">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    
                    <a class="btn btn-primary" href="{{ path('faction_new') }}">Create new</a>
                    
                </div>
                <div class="card-footer text-muted">
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
