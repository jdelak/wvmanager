{% extends 'base.html.twig' %}

{% block title %}Ethnicities List{% endblock %}

{% block body %}
    <div class="col-lg-12">
    <div class="row">
        <div class="col-sm-10 mx-auto">
            <div class="card">
                <div class="card-header">
                   Ethnicities List
                </div>
                <div class="card-body">
                    <h1 class="card-title">Ethnicities List</h1>
                    <div class="card-text">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th>Faction</th>
                                        <th>Image</th>
                                        <th>actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                 {% for ethnicity in ethnicities %}
                                    <tr>
                                        <td>{{ ethnicity.id }}</td>
                                        <td>{{ ethnicity.name }}</td>
                                        <td>{{ ethnicity.IdFaction.name }}</td>
                                        <td><img class="img-fluid" src="{{ asset('images/ethnicities/' ~ ethnicity.image) }}" /></td>
                                        <td>
                                            <a href="{{ path('ethnicity_show', {'id': ethnicity.id}) }}">show</a>
                                            <a href="{{ path('ethnicity_edit', {'id': ethnicity.id}) }}">edit</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="4">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    
                    <a class="btn btn-primary" href="{{ path('ethnicity_new') }}">Create new</a>
                    
                </div>
                <div class="card-footer text-muted">
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
