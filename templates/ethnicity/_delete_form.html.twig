<form method="post" id="delete-entity" action="{{ path('ethnicity_delete', {'id': ethnicity.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ethnicity.id) }}">
    <button class="btn btn-danger">X</button>
</form>
