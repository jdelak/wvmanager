{% extends 'base.html.twig' %}

{% block title %}Ethnicity{% endblock %}

{% block body %}
<div class="col-lg-12">
    <div class="row">
        <div class="col-sm-6 mx-auto">
            <div class="card">
                <div class="card-header">
                    Ethnicity ID : {{ ethnicity.id }}
                    {{ include('ethnicity/_delete_form.html.twig') }}
                </div>
                <div class="card-body text-center">
                    <h1 class="card-title">{{ ethnicity.name }}</h1>
                    <p class="card-text">
                        <h3>( {{ ethnicity.IdFaction.name }} )</h3>
                        <img class="img-fluid" src="{{ asset('images/ethnicities/' ~ ethnicity.image) }}" />
                    </p>
                    
                    <a class="btn btn-primary" href="{{ path('ethnicity_edit', {'id': ethnicity.id}) }}">edit</a>
                    
                </div>
                <div class="card-footer text-muted">
                    <a class="btn btn-default" href="{{ path('ethnicity_index') }}">back to list</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
