{% extends 'base.html.twig' %}

{% block title %}{{ team.name }} / Squad{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-6">
        <h2> <img src="{{ asset('images/teams/' ~ team.image) }}" class="logo-squad"> {{ team.name }}</h2>
        <div class="volley-field" style="background-image : url('/images/woman-court.jpg')">
            {% for titulaire in titulaires %}
            <div class="player-in-squad" data-attribute="position-{{titulaire.squadPosition}}" data-position="{{titulaire.position}}">
                <div class="player-field" style="background: url('/images/players/{{titulaire.image}}') center / contain no-repeat;">
                    <span class="player-overall">{{ titulaire.getOverall }}</span>
                </div>
                <span class="player-name">{{ titulaire.lastname }}</span>
            </div>
            {% endfor %}
            {# <div class="player-in-squad" data-attribute="position-1" data-position="outside_hitter"></div>
            <div class="player-in-squad" data-attribute="position-2" data-position="middle_blocker"></div>
            <div class="player-in-squad" data-attribute="position-3" data-position="outside_hitter"></div>
            <div class="player-in-squad" data-attribute="position-4" data-position="opposite"></div>
            <div class="player-in-squad" data-attribute="position-5" data-position="middle_blocker"></div>
            <div class="player-in-squad" data-attribute="position-6" data-position="setter"></div>
            <div class="player-in-squad" data-attribute="position-7" data-position="libero"></div> #}
        </div>
    </div>
    <div class="col-lg-6">
        <table class="table">
        <tr>
            <th></th>
            <th>Name</th>
            <th>Position</th>
            <th>Overall</th>
        </tr>
        {% for player in players %}
        {% if player.squadPosition > 7 and player.squadPosition < 13 %}
        <tr class="player player-substitute" id="{{ player.id }}" data-position="{{ player.position }}" data-position-squad="{{ player.squadPosition }}" data-ethnicity="{{ player.IdEthnicity.name}}" data-faction="{{ player.IdEthnicity.IdFaction.name}}">
        {% elseif player.squadPosition < 8 %}
        <tr class="player player-titulaire" id="{{ player.id }}" data-position="{{ player.position }}" data-position-squad="{{ player.squadPosition }}" data-ethnicity="{{ player.IdEthnicity.name}}" data-faction="{{ player.IdEthnicity.IdFaction.name}}">
        {% else %}
        <tr class="player" id="{{ player.id }}" data-position="{{ player.position }}" data-position-squad="{{ player.squadPosition }}" data-ethnicity="{{ player.IdEthnicity.name}}" data-faction="{{ player.IdEthnicity.IdFaction.name}}">
        {% endif %}
            <td><img class="player-image" src="{{ asset('images/players/' ~ player.image) }}"></td>
            <td>{{ player.firstname }} {{ player.lastname }}</td>
            <td>{{ player.position }}</td>
            <td data-player-overall="{{ player.getOverall }}">{{ player.getOverall }}</td>
        </tr>
        {% endfor %}
        </table>
    </div>
</div>
{% endblock %}
