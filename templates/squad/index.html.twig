{% extends 'base.html.twig' %}

{% block title %}{{ team.name }} / Squad{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-6">
        <h2> <img src="{{ asset('images/teams/' ~ team.image) }}" class="logo-squad"> {{ team.name }}</h2>
        <div class="volley-field" style="background-image : url('/images/woman-court.jpg')">
            <div class="player-in-squad" data-attribute="position-1" data-position="outside_hitter"></div>
            <div class="player-in-squad" data-attribute="position-2" data-position="middle_blocker"></div>
            <div class="player-in-squad" data-attribute="position-3" data-position="outside_hitter"></div>
            <div class="player-in-squad" data-attribute="position-4" data-position="opposite"></div>
            <div class="player-in-squad" data-attribute="position-5" data-position="middle_blocker"></div>
            <div class="player-in-squad" data-attribute="position-6" data-position="setter"></div>
            <div class="player-in-squad" data-attribute="position-7" data-position="libero"></div>
        </div>
    </div>
    <div class="col-lg-6">
        <table class="table">
        <tr>
            <th></th>
            <th>Name</th>
            <th>Position</th>
            <th>Overall</th>
        </tr>
        {% for player in players %}
        <tr class="player" id="{{ player.id }}" data-position="{{ player.position }}" data-position-squad="{{ player.squadPosition }}">
        <td><img class="player-image" style="width:32px" src="{{ asset('images/players/' ~ player.image) }}"></td>
        <td>{{ player.firstname }} {{ player.lastname }}</td>
        <td>{{ player.position }}</td>
        <td>{{ player.getOverall }}</td>
        </tr>
        {% endfor %}
        </table>
    </div>
</div>
{% endblock %}
